<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <title>Log</title>
        [% INCLUDE head.tt %]
    </head>
    <body>
        [% INCLUDE navigation_bar.tt %]
        <h1>Historie</h1>
        <h2>[% task_name %]
        <form method="post" action="?todo=save_preferences">
            <input type="hidden" name="user_id" value="[% user_id %]">
            <table>
                <tr>
                    <th>Task</th>
                    <th>Datum</th>
                </tr>
                [% FOREACH log_entry IN log_entries %]
                    <tr class="[% loop.parity %]">
                        <td><a href="?user_id=[% user_id %]&amp;task_id=[% log_entry.task_id %]&amp;todo=show_log">[% log_entry.task_name %]</a></td>
                        <td>[% log_entry.dt_done   %]</td>
                    </tr>
                [% END %]
            </table>
        </form>
    </body>
</html>
